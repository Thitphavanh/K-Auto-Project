# ==========================================
# K-Auto Production Environment Variables
# ==========================================
# ຄັດລອກໄຟລ໌ນີ້ເປັນ .env.production ແລະ ປ່ຽນຄ່າຕາມຄວາມເໝາະສົມ
# ⚠️ ຢ່າ commit ໄຟລ໌ .env.production ເຂົ້າ Git!

# ==========================================
# Django Settings
# ==========================================
DJANGO_ENV=production
DEBUG=False

# ສ້າງ SECRET_KEY ໃໝ່ດ້ວຍ:
# python3 -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-this-to-a-very-secure-secret-key-minimum-50-characters

# ປ່ຽນເປັນ domain ແລະ IP ຈິງຂອງທ່ານ
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your_droplet_ip

# ==========================================
# Database Configuration
# ==========================================
DB_NAME=kauto_db
DB_USER=postgres

# ສ້າງລະຫັດຜ່ານທີ່ແຂງແຮງດ້ວຍ:
# python3 -c "import secrets, string; chars = string.ascii_letters + string.digits + '!@#$%^&*'; print(''.join(secrets.choice(chars) for _ in range(32)))"
DB_PASSWORD=change-this-to-secure-database-password

DB_HOST=db
DB_PORT=5432

# ==========================================
# Redis Configuration
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379

# ==========================================
# Security Settings
# ==========================================
# ປ່ຽນເປັນ domain ຈິງຂອງທ່ານ
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SSL/HTTPS Settings (ຕັ້ງເປັນ True ເມື່ອມີ SSL ແລ້ວ)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ==========================================
# Email Configuration (ຖ້າໃຊ້)
# ==========================================
# Gmail SMTP
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ==========================================
# Static & Media Files
# ==========================================
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# ==========================================
# Internationalization
# ==========================================
LANGUAGE_CODE=en-us
TIME_ZONE=Asia/Vientiane
USE_I18N=True
USE_TZ=True

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=INFO

# ==========================================
# Performance Settings
# ==========================================
# Gunicorn Workers (ແນະນຳ: 2-4 x CPU cores)
WEB_CONCURRENCY=4

# ==========================================
# Optional: Third-party Services
# ==========================================
# AWS S3 (ຖ້າໃຊ້)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=ap-southeast-1

# Sentry (Error tracking - ຖ້າໃຊ້)
# SENTRY_DSN=your-sentry-dsn

# Google Analytics (ຖ້າໃຊ້)
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
